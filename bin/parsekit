#!/bin/bash

DIR=`dirname "$0"`
FILE_NAME="parser3 parser3.cgi"
SEARCH_IN=$(echo "`pwd`/cgi:`pwd`/../cgi:$PATH" | tr ':' '\n')
PARSER=

for file in $FILE_NAME; do
    for dir in $SEARCH_IN; do
	if [ -f "$dir/$file" ]; then
	    PARSER="$dir/$file"
	fi;
    done;
done;

if [ -z "$PARSER" ]; then
    echo "Parser not found :("
    exit 1
fi

bash -c "$PARSER \"$DIR/parsekit.p\" $*"
